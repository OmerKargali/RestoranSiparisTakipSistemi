@{
    Layout = null;
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lolee Restoran Çalışan Sayfası</title>
    <style>
        /* Genel Stil */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        header {
            background-color: #6d4c41;
            color: white;
            padding: 20px;
            text-align: center;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }

        /* Profil Bölümü */
        .profile {
            display: flex;
            justify-content: space-around;
            margin-bottom: 30px;
            background-color: #6d4c41;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .profile img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            object-fit: cover;
        }

        .profile-details {
            flex: 1;
            margin-left: 20px;
        }

        .profile-details h2 {
            margin: 0;
            font-size: 24px;
        }

        .profile-details p {
            margin: 5px 0;
            font-size: 14px;
        }

        /* Sipariş Bölümü */
        .order-section {
            background-color: white;
            padding: 20px;
            margin-bottom: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .order-section h3 {
            text-align: center;
            color: #6d4c41;
            margin-bottom: 20px;
        }

        .order-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .order-item {
            background-color: #f9f9f9;
            padding: 15px;
            border-radius: 10px;
            width: 250px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .order-item h4 {
            color: #333;
        }

        .order-status {
            margin: 10px 0;
        }

        .order-status select {
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 14px;
        }

        /* Günlük Sipariş Özeti Bölümü */
        .summary-section {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .summary-section h3 {
            color: #6d4c41;
            text-align: center;
            margin-bottom: 20px;
        }

        .summary-details {
            display: flex;
            justify-content: space-around;
        }

        .summary-card {
            background-color: #f9f9f9;
            padding: 15px;
            border-radius: 10px;
            width: 200px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .summary-card h4 {
            margin-bottom: 10px;
        }

        .summary-card p {
            font-size: 14px;
            margin: 0;
        }

        footer {
            text-align: center;
            padding: 10px;
            background-color: #6d4c41;
            color: white;
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Profil Bölümü -->
        <section class="profile">
            <img src="profile.jpg" alt="Profil Fotoğrafı">
            <div class="profile-details">
                <h2>Ahmet Yılmaz</h2>
                <p><strong>Pozisyon:</strong> Şef</p>
                <p><strong>Telefon:</strong> 123-456-789</p>
                <p><strong>E-posta:</strong> ahmet@lolee.com</p>
                <p><strong>Ülke:</strong> Türkiye</p>
            </div>
        </section>

        <!-- Sipariş Bölümü -->
        <section class="order-section">
            <h3>Gelen Siparişler</h3>
            <div class="order-list">
                <div class="order-item">
                    <h4>Sipariş #1</h4>
                    <p><strong>Durum:</strong> <span class="order-status">
                            <select>
                                <option>Hazırlanıyor</option>
                                <option>Yolda</option>
                                <option>Teslim Edildi</option>
                            </select>
                        </span></p>
                </div>
                <div class="order-item">
                    <h4>Sipariş #2</h4>
                    <p><strong>Durum:</strong> <span class="order-status">
                            <select>
                                <option>Hazırlanıyor</option>
                                <option>Yolda</option>
                                <option>Teslim Edildi</option>
                            </select>
                        </span></p>
                </div>
            </div>
        </section>

        <!-- Günlük Sipariş Özeti -->
        <section class="summary-section">
            <h3>Günlük Sipariş Özeti</h3>
            <div class="summary-details">
                <div class="summary-card">
                    <h4>Sipariş Sayısı</h4>
                    <p>10</p>
                </div>
                <div class="summary-card">
                    <h4>Toplam Tutar</h4>
                    <p>500 TL</p>
                </div>
            </div>
        </section>
    </div>
</body>