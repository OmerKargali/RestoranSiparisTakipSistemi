@model RestoranSiparisTakipSistemi.Models.VMKayitOl;
@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        /* Uyarı kutusu stilini tanımla */
        .alert {
            padding: 15px;
            margin: 20px 0;
            border-radius: 5px;
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            font-size: 16px;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }

        .alert strong {
            font-weight: bold;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        section {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            width: 100%;
            background-image: url(/assets/img/girisarkaplan.jpeg);
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            background-size: 100%;

        }

        .main-form {
            position: relative;
            width: 600px;
            padding: 20px;
            height: 500px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            border: 2px solid white;
            border-radius: 35px;
            background-color: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
            display: flex;
        }

        h2 {
            font-size: 2.1em;
            color: white;
            text-align: center;
            margin-top: ;
        }

        .input1 {
            position: relative;
            margin: 30px 0;
            width: 500px;
            border-bottom: 2px solid white;
        }

        .input1 label {
            position: absolute;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            color: white;
            font-size: 1em;
            pointer-events: none;
            transition: 0.3s ease all;
        }

        .input1 input {
            width: 100%;
            background: none;
            border: none;
            outline: none;
            padding: 10px 0;
            font-size: 1em;
            color: white;
        }

        .input1 input:focus~label,
        .input1 input:valid~label {
            top: 0;
            transform: translateY(-100%);
            font-size: 1em;
            color: #f0f0f0;
        }

        .input1 ion-icon {
            position: absolute;
            color: white;
            font-size: 1.3em;
            top: -1px;
            right: 8px;
        }

        .forgot {
            margin: -16px 0 16px;
            font-size: 0.9em;
            color: white;
            display: flex;
            justify-content: center;
        }

        .forgot label a {
            margin-right: 3px;
            text-decoration: none;
            font-size: 0.9em;
            color: white;
        }

        button {
            width: 50%;
            height: 45px;
            background-color: white;
            border: none;
            outline: none;
            cursor: pointer;
            font-size: 1em;
            font-weight: 700;
            border: 25px;
            border-radius: 5px;
        }

        .button-div {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register {
            font-size: 0.9em;
            color: white;
            text-align: center;
            margin: 25px 0;
        }

        .register p a {
            text-decoration: none;
            color: white;
            font-weight: 800;
        }

        .register p a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <section>
        <div class="main-form">
            <div class="form-content">
                <form asp-controller="Hesap" asp-action="KayitOl" method="post">

                    <h2>Kayıt Ol</h2>

                    <div style="display: flex; flex-wrap: wrap; gap: 12px; margin: 50px;">

                        <div class="input1" style="width: calc(33.33% - 8px);">
                            <input type="text" name="Ad" asp-for="Ad" required>
                            <label for="Ad">Adınız</label>
                        </div>

                        <div class="input1" style="width: calc(33.33% - 8px);">
                            <input type="text" name="Soyad" asp-for="Soyad" required>
                            <label for="Soyad">Soyadınız</label>
                        </div>

                        <div class="input1" style="width: calc(33.33% - 8px);">
                            <input type="text" name="Telefon" asp-for="Telefon" required>
                            <label for="Telefon">Telefon Numarası</label>
                        </div>

                        <!-- 2. Satıra Geçecek -->
                        <div class="input1" style="width: calc(33.33% - 8px);">
                            <input type="email" name="Eposta" asp-for="Eposta" required>
                            <label for="Eposta">E-Posta</label>
                        </div>

                        <div class="input1" style="width: calc(33.33% - 8px);">
                            <input type="password" name="Sifre" asp-for="Sifre" required>
                            <label for="Sifre">Şifre</label>
                        </div>

                        <div class="input1" style="width: calc(33.33% - 8px);">
                            <input type="password" required>
                            <label for="againpassword">Tekrar Şifre</label>
                        </div>

                    </div>

                    <div class="button-div">
                        <button href="/Hesap/Giris.cshtml">Kayıt Ol</button>
                    </div>
                    @{
                        var hataMesaji = ViewData["ValidateMessage"] as string;
                    }

                    @if (!string.IsNullOrEmpty(hataMesaji))
                    {
                        <div class="alert alert-danger">
                            <strong>Hata!</strong> @hataMesaji
                        </div>
                    }
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
